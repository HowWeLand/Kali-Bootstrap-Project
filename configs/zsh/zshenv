# /etc/zsh/zshenv
# Runs for ALL shells. Defines all variables and creates all directories.

# == Core Zsh/User Variables ==
export ZDOTDIR=$HOME/.zsh
export LOCAL_BIN=$HOME/bin

# == Language & Tool Path Definitions ==

# == Java ==
export LOCAL_JAVA=$LOCAL_BIN/java
# SDKMAN! uses this standard variable for its home directory.
export SDKMAN_DIR=$LOCAL_JAVA/sdkman

# == Python ==
export LOCAL_PYTHON=$LOCAL_BIN/python
# pyenv (a common python version manager) uses PYENV_ROOT.
export PYENV_ROOT=$LOCAL_PYTHON/pyenv
# Your existing pipx variables are correct.
export PIPX_HOME=$LOCAL_PYTHON/pipx_venv
export PIPX_BIN_DIR=$LOCAL_PYTHON/pipx_bin

# == Go ==
# GOPATH is the standard variable for the Go workspace.
export GOPATH=$LOCAL_BIN/go

# == Rust ==
export LOCAL_RUST=$LOCAL_BIN/rust
# These are the standard variables for rustup and cargo.
export RUSTUP_HOME=$LOCAL_RUST/rustup
export CARGO_HOME=$LOCAL_RUST/cargo

# == Javascript ==
export LOCAL_JS=$LOCAL_BIN/javascript
export UNHOLY_PATH=$LOCAL_JS # Legacy alias for your notes
# Bun uses BUN_INSTALL for its root.
export BUN_INSTALL=$LOCAL_JS/bun
# NODE_PATH is used by Node to search for modules.
export NODE_PATH=$LOCAL_JS/node_modules

# == Ruby ==
export LOCAL_RUBY=$LOCAL_BIN/ruby
# rbenv uses this standard variable for its root.
export RBENV_ROOT=$LOCAL_RUBY/rbenv

# == Perl ==
export LOCAL_PERL=$LOCAL_BIN/perl
# plenv uses this standard variable for its root.
export PLENV_ROOT=$LOCAL_PERL/plenv

# == Lua ==
export LOCAL_LUA=$LOCAL_BIN/lua
# luaver uses this variable for its directory.
export LUAVER_DIR=$LOCAL_LUA/luaver

# == PHP ==
export LOCAL_PHP=$LOCAL_BIN/php
# phpenv (similar to rbenv) uses this standard variable.
export PHPENV_ROOT=$LOCAL_PHP/phpenv


